<div
  class="d-flex justify-content-between align-items-center mb-3 border-bottom-1"
>
  <h2>سفارشات</h2>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>نام</th>
        <th>ایمیل</th>
        <th>شماره تلفن</th>
        <th>متن</th>
        <th>خوانده شده</th>
        <th>حذف</th>
      </tr>
    </thead>
    <tbody>
      <% let num = 1 %> <% posteds.docs.forEach(posted => { %>
      <tr>
        <td><%= num %></td>
        <td><%= posted.name %></td>
        <td><%= posted.email %></td>
        <td><%= posted.tel %></td>
        <td><%= posted.message %></td>
        <td>
          <form action="/admin/seen/<%= posted.id %>" method="post">
            <input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />
            <div class="btn-group btn-group-sm">
              <% if(posted.seen === false){ %>
              <button type="submit" class="btn btn-warning">دیده نشده</button>
              <% }else{ %>
              <button type="submit" class="btn btn-success">دیده شده</button>
              <% } %>
            </div>
          </form>
        </td>
        <td>
          <form action="/admin/delete/<%= posted.id %>" method="post">
            <input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />
            <div class="btn-group btn-group-sm">
              <button type="submit" class="btn btn-danger">حذف</button>
            </div>
          </form>
        </td>
      </tr>
      <% num++ }) %>
    </tbody>
  </table>
</div>
<script
  src="../js/bootstrap.bundle.min.js"
  integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
  crossorigin="anonymous"
></script>
<script src="../js/dashboard.js"></script>
